@model ScientificReport.DTO.Models.PostgraduateGuidance.PostgraduateGuidanceEditModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Edit postgraduate guidance"];
}

<h5>@ViewData["Title"]</h5>
<hr />
<div class="row">
	<div class="col s12">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="validate"></div>
			<input type="hidden" asp-for="Id" />
			<div class="row">
				<div class="input-field col s6">
					<input asp-for="PostgraduateName" type="text" class="validate"/>
					<label asp-for="PostgraduateName">@Localizer["Postgraduate name"]</label>
					<span class="helper-text" asp-validation-for="PostgraduateName" 
						  data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<textarea asp-for="PostgraduateInfo" class="materialize-textarea"></textarea>
					<label asp-for="PostgraduateInfo">@Localizer["Postgraduate info"]</label>
					<span class="helper-text" asp-validation-for="PostgraduateInfo" 
						  data-length="400" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row myButtons">
				<button type="submit" class="waves-effect btn-small accent-2">@Localizer["Save"]</button>
				<a asp-action="Index" class="waves-effect btn-small blue darken-3">@Localizer["Cancel"]</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

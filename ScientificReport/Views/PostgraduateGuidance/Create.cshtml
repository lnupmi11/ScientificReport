@model ScientificReport.DAL.Entities.PostgraduateGuidance
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create";
}

<h3>@Localizer["Create"]</h3>

<h5>@Localizer["PostgraduateGuidance"]</h5>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
           
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="PostgraduateName" type="text" class="validate"/>
                    <label asp-for="PostgraduateName">@Localizer["PostgraduateName"]</label>
                    <span class="helper-text" asp-validation-for="PostgraduateName" 
                          data-error="" data-success=""></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <textarea asp-for="PostgraduateInfo" class="materialize-textarea"></textarea>
                    <label asp-for="PostgraduateInfo">@Localizer["PostgraduateName"]</label>
                    <span class="helper-text" asp-validation-for="PostgraduateInfo" 
                          data-length="400" data-error="" data-success=""></span>
                </div>
            </div>
	
            <div class="row myButtons">
                <input type="submit" value="@Localizer["Create"]" class="waves-effect btn-small  amber accent-2"/>
                <a asp-action="Index" class="btn-small blue darken-3">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

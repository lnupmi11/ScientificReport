@model ScientificReport.DAL.Entities.PostgraduateGuidance

@{
    ViewData["Title"] = "Create";
}


<h3>Create</h3>

<h5>Postgraduate Guidance</h5>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
           
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="PostgraduateName" type="text" class="validate"/>
                    <label asp-for="PostgraduateName"></label>
                    <span class="helper-text" asp-validation-for="PostgraduateName" 
                          data-error="" data-success=""></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <textarea asp-for="PostgraduateInfo" class="materialize-textarea"></textarea>
                    <label asp-for="PostgraduateInfo"></label>
                    <span class="helper-text" asp-validation-for="PostgraduateInfo" 
                          data-length="400" data-error="" data-success=""></span>
                </div>
            </div>
	
            <div class="row myButtons">
                <input type="submit" value="Create" class="waves-effect btn-small  amber accent-2"/>
                <a asp-action="Index" class="btn-small blue darken-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-small blue darken-3">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

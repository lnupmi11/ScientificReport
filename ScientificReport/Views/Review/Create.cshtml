@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.Review
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Create"];
}

<h1>@Localizer["Create"]</h1>

<h4>@Localizer["Review"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfReview" class="control-label">@Localizer["DateOfReview"]</label>
                <input asp-for="DateOfReview" class="form-control" />
                <span asp-validation-for="DateOfReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="waves-effect btn-small green darken-3"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn-small blue darken-3">@Localizer["Cancel"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

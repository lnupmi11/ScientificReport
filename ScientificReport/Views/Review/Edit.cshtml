@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.Review
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit"];
}

<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Review"]</h4>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="DateOfReview" type="date" class="validate">
                    <label asp-for="DateOfReview">Password</label>
                    <span asp-validation-for="DateOfReview" data-error="" data-success=""></span>
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Save" class="waves-effect btn-small  amber accent-2"/>
                <a asp-action="Index" class="btn-small blue darken-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

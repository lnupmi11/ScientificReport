@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.Review
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Details of review"];
}

<div>
	<h5>@ViewData["Title"]</h5>
	<hr />
	<dl class="row">
		<dt class = "col s2">
			@Localizer["Date of review"]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.DateOfReview)
		</dd>
		<dt class = "col s2">
			@Localizer["Work"]
		</dt>
		<dd class="col s10">
			<a asp-controller="Publication" asp-action="Details"
			   asp-route-id="@Model.Work.Id">
				@Model.Work.Title
			</a>
		</dd>
		<dt class = "col s2">
			@Localizer["Reviewer"]
		</dt>
		<dd class="col s10">
			<a asp-controller="UserProfile" asp-action="Details"
			   asp-route-id="@Model.Reviewer.Id">
				@Model.Reviewer.FullName
			</a>
		</dd>
	</dl>
</div>
<div style="margin-top: 20px">
	<a asp-action="Edit" asp-route-id="@Model.Id" class="waves-effect btn-small waves-light">@Localizer["Edit"]</a>
	<a asp-action="Index" class="btn-small blue darken-3">@Localizer["Back to list"]</a>
</div>

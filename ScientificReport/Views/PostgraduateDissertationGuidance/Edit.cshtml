@model ScientificReport.DTO.Models.PostgraduateDissertationGuidance.PostgraduateDissertationGuidanceEditModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Edit"];
}

<h3>@Localizer["Edit"]</h3>

<h5>@Localizer["Postgraduate Dissertation Guidance"]</h5>
<hr/>
<div class="row">
	<div class="col s12">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="validate"></div>
			<input type="hidden" asp-for="Id"/>
			<div class="row">
				<div class="input-field col s5">
					<input asp-for="PostgraduateName" type="text" class="validate">
					<label asp-for="PostgraduateName">@Localizer["PostgraduateName"]</label>
					<span class="helper-text" asp-validation-for="PostgraduateName"
						  data-error="" data-success="">
					</span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s5">
					<input asp-for="Dissertation" type="text" class="validate">
					<label asp-for="Dissertation">@Localizer["PostgraduateName"]</label>
					<span class="helper-text" asp-validation-for="Dissertation"
						  data-error="" data-success="">
					</span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s5">
					<input asp-for="Speciality" type="text" class="validate"/>
					<label asp-for="Speciality">@Localizer["PostgraduateName"]</label>
					<span class="helper-text" asp-validation-for="Speciality"
						  data-error="" data-success="">
					</span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s5">
					<input asp-for="DateDegreeGained" type="date" class="validate"/>
					<label asp-for="DateDegreeGained">@Localizer["PostgraduateName"]</label>
					<span class="helper-text" asp-validation-for="DateDegreeGained"
						  data-error="" data-success="">
					</span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s5">
					<input asp-for="GraduationYear" type="number" class="validate"/>
					<label asp-for="GraduationYear">@Localizer["PostgraduateName"]</label>
					<span class="helper-text" asp-validation-for="GraduationYear"
						  data-error="" data-success="">
					</span>
				</div>
			</div>
			<div class="row myButtons">
				<input type="submit" value="@Localizer["Save"]" class="waves-effect btn-small  amber accent-2"/>
				<a asp-action="Index" class="btn-small blue darken-3">@Localizer["Cancel"]</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@model IEnumerable<ScientificReport.DAL.Entities.PostgraduateDissertationGuidance>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Index"];
}

<h3>@Localizer["Postgraduate Dissertation Guidance"]</h3>

<p>
	<a asp-action="Create" class="waves-effect btn-small green darken-3">@Localizer["Create New"]</a>
</p>
<table class="responsive-table">
	<thead>
		<tr>
			<th>
				@Localizer[Html.DisplayNameFor(model => model.PostgraduateName)]
			</th>
			<th>
				@Localizer[Html.DisplayNameFor(model => model.Dissertation)]
			</th>
			<th>
				@Localizer[Html.DisplayNameFor(model => model.Speciality)]
			</th>
			<th>
				@Localizer[Html.DisplayNameFor(model => model.DateDegreeGained)]
			</th>
			<th>
				@Localizer[Html.DisplayNameFor(model => model.GraduationYear)]
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.PostgraduateName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Dissertation)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Speciality)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DateDegreeGained)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.GraduationYear)
			</td>
			<td>
				<a asp-action="Details" asp-route-id="@item.Id" class="btn-small blue darken-3">@Localizer["Details"]</a>
				<a asp-action="Edit" asp-route-id="@item.Id" class="waves-effect btn-small waves-light">@Localizer["Edit"]</a>
				<form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
					<button type="submit" class="waves-effect btn-small deep-orange darken-3">@Localizer["Delete"]</button>
				</form>
			</td>
		</tr>
}
	</tbody>
</table>

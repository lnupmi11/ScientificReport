@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.PatentLicenseActivity
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Details of patent/application"];
}

<div>
	<h5>@ViewData["Title"]</h5>
	<hr />
	<dl class="row">
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Name)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Number)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Number)
		</dd>
		<dt class = "col s2">
			@Localizer["Date"]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Date)
		</dd>
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Type)]
		</dt>
		<dd class = "col s10">
			@Localizer[Model.Type.ToString()]
		</dd>
		@if (Model.Type.ToString() == "Patent")
		{
			<dt class = "col s2">
				@Localizer["Authors"]
			</dt>
			<dd class = "col s10">
				<ul>
					@{
						var authors = Model.AuthorsPatentLicenseActivities.Select(a => a.Author);
					} 
					@foreach (var author in authors)
					{
						<li>@author.FullName</li>
					}
				</ul>
			</dd>
			<dt class = "col s2">
				@Localizer["Co-authors"]
			</dt>
			<dd class = "col s10">
				<ul>
					@{
						var coauthors = Model.CoauthorsPatentLicenseActivities.Select(a => a.Coauthor);
					} 
					@foreach (var coauthor in coauthors)
					{
						<li>@coauthor</li>
					}
				</ul>
			</dd>
		}
		else
		{
			<dt class = "col s2">
				@Localizer["Applicants"]
			</dt>
			<dd class = "col s10">
				<ul>
					@{
						var applicants = Model.ApplicantsPatentLicenseActivities.Select(a => a.Applicant);
					} 
					@foreach (var applicant in applicants)
					{
						<li>@applicant.FullName</li>
					}
				</ul>
			</dd>
			<dt class = "col s2">
				@Localizer["Co-applicants"]
			</dt>
			<dd class = "col s10">
				<ul>
					@{
						var coApplicants = Model.CoApplicantsPatentLicenseActivities.Select(a => a.CoApplicant);
					} 
					@foreach (var coApplicant in coApplicants)
					{
						<li>@coApplicant</li>
					}
				</ul>
			</dd>
		}
	</dl>
</div>
<div style="margin-top: 20px">
	<a asp-action="Edit" asp-route-id="@Model.Id" class="waves-effect btn-small waves-light">@Localizer["Edit"]</a>
	<a asp-action="Index" class="btn-small blue darken-3">@Localizer["Back to list"]</a>
</div>

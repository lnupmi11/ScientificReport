@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.PatentLicenseActivity
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Details"];
}

<h3>@Localizer["Details"]</h3>

<div>
	<h5>@Localizer["Patent License Activity"]</h5>
	<hr />
	<dl class="row">
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Name)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Number)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Number)
		</dd>
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.DateTime)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.DateTime)
		</dd>
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Type)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Type)
		</dd>

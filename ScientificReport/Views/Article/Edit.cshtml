@model ScientificReport.DAL.Entities.Article

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr/>
<div class="row">
	<div class="col s12">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="validate"></div>
			<input type="hidden" asp-for="Id"/>
			<div class="row">
				<div class="input-field col s7">
					<select asp-for="Type" class="col s12 push-s2">
						<option value="" disabled selected>Choose your option</option>
						<option value="ImpactFactor">Impact Factor</option>
						<option value="IncludedInWebOfScienceScopusOthers">Included In Web Of Science Scopus Others</option>
						<option value="ForeignPublishing">Foreign Publishing</option>
						<option value="ProfessionalPublishingOfUkraine">Professional Publishing Of Ukraine</option>
						<option value="OtherPublishingOfUkraine">Other Publishing Of Ukraine</option>
						<option value="ReportThesis">Report Thesis</option>
						<option value="InternationalReportThesis">International Report Thesis</option>
						<option value="DomesticReportThesis">Domestic Report Thesis</option>
						<option value="ForeignReportThesisWithResearchResults">Foreign Report Thesis With Research Results</option>
					</select>
					<label asp-for="Type">Type</label>
				</div>
			</div>

			<div class="row">
				<div class="input-field col s7">
					<input asp-for="Title" type="text" class="validate">
					<label asp-for="Title"></label>
					<span class="helper-text" asp-validation-for="Title" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<textarea asp-for="LiabilityInfo" class="materialize-textarea"></textarea>
					<label asp-for="LiabilityInfo"></label>
					<span class="helper-text" asp-validation-for="LiabilityInfo" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<textarea asp-for="DocumentInfo" class="materialize-textarea"></textarea>
					<label asp-for="DocumentInfo"></label>
					<span class="helper-text" asp-validation-for="DocumentInfo" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="PublishingPlace" type="text" class="validate">
					<label asp-for="PublishingPlace"></label>
					<span class="helper-text" asp-validation-for="PublishingPlace" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="PublishingHouseName" type="text" class="validate">
					<label asp-for="PublishingHouseName"></label>
					<span class="helper-text" asp-validation-for="PublishingHouseName" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="PublishingYear" type="number" class="validate">
					<label asp-for="PublishingYear"></label>
					<span class="helper-text" asp-validation-for="PublishingYear" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<label class="col s6">
					<input type="checkbox" class="filled-in" asp-for="IsPeriodical"/>
					<span>@Html.DisplayNameFor(model => model.IsPeriodical)</span>
				</label>
			</div>
			<div class="row">
				<label class="col s7">
					<input type="checkbox" class="filled-in" asp-for="IsPrintCanceled"/>
					<span>@Html.DisplayNameFor(model => model.IsPrintCanceled)</span>
				</label>
			</div>
			<div class="row">
				<label class="col s7">
					<input type="checkbox" class="filled-in" asp-for="IsRecommendedToPrint"/>
					<span>@Html.DisplayNameFor(model => model.IsRecommendedToPrint)</span>
				</label>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="Number" type="number" class="validate">
					<label asp-for="Number"></label>
					<span class="helper-text" asp-validation-for="Number" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="PagesAmount" type="number" class="validate">
					<label asp-for="PagesAmount"></label>
					<span class="helper-text" asp-validation-for="PagesAmount" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<input type="submit" value="Save" class="waves-effect btn-small  amber accent-2"/>
				<a asp-action="Index" class="btn-small blue darken-3">Cancel</a>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<script type="text/javascript">
		$(document).ready(function() {
			$('select').formSelect();
		});
	</script>
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
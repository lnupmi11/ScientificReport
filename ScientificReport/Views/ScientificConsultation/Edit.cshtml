@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DTO.Models.ScientificConsultation.ScientificConsultationEditModel
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Edit scientific consultation"];
}

<h5>@ViewData["Title"]</h5>
<hr />
<div class="row">
	<div class="col s12">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="validate"></div>
			<input type="hidden" asp-for="Id" />
			<div class="row">
				<div class="input-field col s6">
					<input asp-for="CandidateName" type="text" class="validate">
					<label asp-for="CandidateName">@Localizer["Candidate last, first and middle names"]</label>
					<span class="helper-text" asp-validation-for="CandidateName" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<input asp-for="DissertationTitle" type="text" class="validate">
					<label asp-for="DissertationTitle">@Localizer["Dissertation title"]</label>
					<span class="helper-text" asp-validation-for="DissertationTitle" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row myButtons">
				<button type="submit" class="waves-effect btn-small accent-2">@Localizer["Save"]</button>
				<a asp-action="Index" class="waves-effect btn-small blue darken-3">@Localizer["Cancel"]</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.ScientificConsultation
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Edit"];
}

<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["ScientificConsultation"]</h4>
<hr />
<div class="row">
	<div class="col s12">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="validate"></div>
			<input type="hidden" asp-for="Id" />
			<div class="row">
				<div class="input-field col s6">
					<input asp-for="CandidateName" type="text" class="validate">
					<label asp-for="CandidateName">@Localizer["CandidateName"]</label>
					<span class="helper-text" asp-validation-for="CandidateName" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<input asp-for="DissertationTitle" type="text" class="validate">
					<label asp-for="DissertationTitle">@Localizer["DissertationTitle"]</label>
					<span class="helper-text" asp-validation-for="DissertationTitle" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<input type="submit" value="@Localizer["Save"]" class="waves-effect btn-small  amber accent-2"/>
				<a asp-action="Index" class="btn-small blue darken-3">@Localizer["Cancel"]</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

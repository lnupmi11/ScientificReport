@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DTO.Models.Grant.GrantModel
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Create grant"];
}

<h5>@ViewData["Title"]</h5>
<hr/>
<div class="row">
	<div class="col s12">
		<form asp-action="Create">
			<div class="row">
				<div class="input-field col s6">
					<input asp-for="Info" type="text" class="validate">
					<label asp-for="Info">@Localizer["Info"]</label>
					<span class="helper-text" asp-validation-for="Info" data-error="some data is in bad format" data-success=""></span>
				</div>
			</div>
			<div class="row myButtons">
				<button type="submit" class="waves-effect btn-small accent-2">@Localizer["Create"]</button>
				<a asp-action="Index" class="waves-effect btn-small blue darken-3">@Localizer["Cancel"]</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

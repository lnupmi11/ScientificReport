@model ScientificReport.DTO.Models.Conference.ConferenceEdit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Conference</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Conference.Id" />
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Conference.Topic" type="text" class="validate">
                    <label asp-for="Conference.Topic">Topic</label>
                    <span class="helper-text" asp-validation-for="Conference.Topic" data-error="some data is in bad format" data-success=""></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Conference.Date" type="date" class="validate">
                    <label asp-for="Conference.Date">Password</label>
                    <span asp-validation-for="Conference.Date" data-error="" data-success=""></span>
                </div>
            </div>
            <div class="row">
                <input type="submit" value="Save" class="waves-effect btn-small  amber accent-2"/>
                <a asp-action="Index" class="btn-small blue darken-3">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

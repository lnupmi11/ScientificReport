@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.ScientificInternship
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Details of scientific internship"];
}

<div>
    <h5>@ViewData["Title"]</h5>
    <hr />
    <dl class="row">
        <dt class = "col s2">
            @Localizer["Place of internship"]
        </dt>
        <dd class = "col s10">
            @Html.DisplayFor(model => model.PlaceOfInternship)
        </dd>
        <dt class = "col s2">
            @Localizer[Html.DisplayNameFor(model => model.Started)]
        </dt>
        <dd class = "col s10">
            @Html.DisplayFor(model => model.Started)
        </dd>
        <dt class = "col s2">
            @Localizer[Html.DisplayNameFor(model => model.Ended)]
        </dt>
        <dd class = "col s10">
            @Html.DisplayFor(model => model.Ended)
        </dd>
        <dt class = "col s2">
            @Localizer[Html.DisplayNameFor(model => model.Contents)]
        </dt>
        <dd class = "col s10">
            @Html.DisplayFor(model => model.Contents)
        </dd>
    </dl>
</div>
<div style="margin-top: 20px">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="waves-effect btn-small waves-light">@Localizer["Edit"]</a>
    <a asp-action="Index" class="btn-small blue darken-3">@Localizer["Back to list"]</a>
</div>

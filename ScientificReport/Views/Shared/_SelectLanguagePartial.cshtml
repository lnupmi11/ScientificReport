@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
	var requestCulture = Context.Features.Get<IRequestCultureFeature>();
	var cultureItems = LocOptions.Value.SupportedUICultures
		.Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
		.ToList();
}

@if (requestCulture != null)
{
	<div>
		<p style="display: inline">@Localizer["Language"]:</p>
		@foreach (var culture in cultureItems)
		{
			<form id="selectLanguage" asp-controller="Home" style="display: inline"
			      asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path"
			      method="post" class="form-horizontal" role="form">
				<input type="hidden" name="culture" value="@culture.Value"/>
				<button type="submit" class="btn btn-default btn-xs">@Localizer[culture.Text]</button>
			</form>
		}
	</div>	
}

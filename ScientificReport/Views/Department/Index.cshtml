@model IEnumerable<ScientificReport.DAL.Entities.Department>

@{
	ViewData["Title"] = "Departments";
}


<h3>Departments</h3>

<button type="button" class="waves-effect btn-small green darken-3" onclick="location.href = '@Url.Action("Create", "Department")'">Create</button>

<table class="responsive-table">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Title)
		</th>
		<th>Staff number</th>
		<th>Scientific works total</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Staff.Count)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ScientificWorks.Count)
			</td>
			<td>
				<a asp-action="Details" asp-route-id="@item.Id" class="btn-small blue darken-3">Details</a>
				<a asp-action="Edit" asp-route-id="@item.Id" class="waves-effect btn-small waves-light">Edit</a>
				<form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
					<button type="submit" class="waves-effect btn-small deep-orange darken-3">Delete</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>
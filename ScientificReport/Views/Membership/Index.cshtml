@model IEnumerable<ScientificReport.DAL.Entities.Membership>

@{
	ViewData["Title"] = "Memberships";
}

<h2>Membership</h2>

<p>
	<button type="button" class="waves-effect btn-small green darken-3" onclick="location.href = '@Url.Action("Create", "Membership")'">Create</button>
</p>

<table class="responsive-table">
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.MemberOf)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.MembershipInfo)
			</td>
			<td>
				<a asp-action="Details" asp-route-id="@item.Id" class="btn-small blue darken-3">Details</a>
				<a asp-action="Edit" asp-route-id="@item.Id" class="waves-effect btn-small waves-light">Edit</a>
				<form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
					<button type="submit" class="waves-effect btn-small deep-orange darken-3">Delete</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>
@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.Membership
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Details"];
}

<div>
	<h3>@Localizer["Membership"]</h3>
	<hr/>
	<dl class="row">
		<dt class = "col s3">
			@Localizer[Html.DisplayNameFor(model => model.MemberOf)]
		</dt>
		<dd class = "col s9">
			@Html.DisplayFor(model => model.MemberOf)
		</dd>
	</dl>
	<dl class="row">
		<dt class = "col s3">
			@Localizer[Html.DisplayNameFor(model => model.MembershipInfo)]
		</dt>
		<dd class = "col s9">
			@Html.DisplayFor(model => model.MembershipInfo)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model.Id" class="waves-effect btn-small waves-light">@Localizer["Edit"]</a>
	<a asp-action="Index" class="btn-small blue darken-3">@Localizer["Back to List"]</a>
</div>

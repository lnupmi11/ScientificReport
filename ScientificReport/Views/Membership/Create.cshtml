@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DTO.Models.Membership.MembershipModel
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Add membership"];
}

<h5>@ViewData["Title"]</h5>
<hr/>
<div class="row">
	<div class="col s12">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="validate"></div>
			<div class="row">
				<div class="input-field col s7">
					<select asp-for="MemberOf" class="col s12 push-s2">
						<option value="" disabled selected>@Localizer["Choose your option"]</option>
						<option value="ScientificCouncil">@Localizer["Scientific council"]</option>
						<option value="ExpertCouncil">@Localizer["Expert council"]</option>
						<option value="EditorialBoard">@Localizer["Scientific journal editorial board"]</option>
					</select>
					<label asp-for="MemberOf">@Localizer["Member of"]</label>
				</div>
			</div>

			<div class="row">
				<div class="input-field col s7">
					<textarea asp-for="MembershipInfo" class="materialize-textarea"></textarea>
					<label asp-for="MembershipInfo">@Localizer["Membership info"]</label>
					<span class="helper-text" asp-validation-for="MembershipInfo" 
						  data-length="400" data-error="" data-success=""></span>
				</div>
			</div>
	
			<div class="row myButtons">
				<button type="submit" class="waves-effect btn-small accent-2">@Localizer["Create"]</button>
				<a asp-action="Index" class="waves-effect btn-small blue darken-3">@Localizer["Cancel"]</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function() {
			$('select').formSelect();
		});
	</script>
}

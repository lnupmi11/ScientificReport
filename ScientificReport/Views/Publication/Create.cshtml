@model ScientificReport.DAL.Entities.Publication

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Publication</h4>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
			<div class="row">
				<div class="input-field col s7">
					<select asp-for="Type" class="col s12 push-s2">
						<option value="" disabled selected>Choose your option</option>
						<option value="Monograph">Monograph</option>
						<option value="TextBook">TextBook</option>
						<option value="HandBook">HandBook</option>
						<option value="Dictionary">Dictionary</option>
						<option value="Translation">Translation</option>
						<option value="Comment">Comment</option>
						<option value="BibliographicIndex">Bibliographic Index</option>
						<option value="Other">Other</option>
					</select>
					<label asp-for="Type">Type</label>
				</div>
			</div>
			
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="Title" type="text" class="validate">
					<label asp-for="Title"></label>
					<span class="helper-text" asp-validation-for="Title" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="Specification" type="text" class="validate"/>
					<label asp-for="Specification"></label>
					<span class="helper-text" asp-validation-for="Specification" 
					      data-length="400" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="PublishingPlace" type="text" class="validate">
					<label asp-for="PublishingPlace"></label>
					<span class="helper-text" asp-validation-for="PublishingPlace" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="PublishingHouseName" type="text" class="validate">
					<label asp-for="PublishingHouseName"></label>
					<span class="helper-text" asp-validation-for="PublishingHouseName" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s7">
					<input asp-for="PublishingYear" type="number" class="validate">
					<label asp-for="PublishingYear"></label>
					<span class="helper-text" asp-validation-for="PublishingYear" data-error="" data-success=""></span>
				</div>
			</div>
			<div class="row">
				<label class="col s7">
					<input type="checkbox" class="filled-in" asp-for="IsPrintCanceled"/>
					<span>@Html.DisplayNameFor(model => model.IsPrintCanceled)</span>
				</label>
			</div>
			<div class="row">
				<label class="col s7">
					<input type="checkbox" class="filled-in" asp-for="IsRecommendedToPrint"/>
					<span>@Html.DisplayNameFor(model => model.IsRecommendedToPrint)</span>
				</label>
			</div>
	        <div class="row">
		        <div class="input-field col s7">
			        <input asp-for="PagesAmount" type="number" class="validate">
			        <label asp-for="PagesAmount"></label>
			        <span class="helper-text" asp-validation-for="PagesAmount" data-error="" data-success=""></span>
		        </div>
	        </div>
	        <div class="row">
		        <div class="input-field col s6">
			        <input asp-for="CreatedAt" type="date" class="validate">
			        <label asp-for="CreatedAt">Password</label>
			        <span asp-validation-for="CreatedAt" data-error="" data-success=""></span>
		        </div>
	        </div>
	        <div class="row">
		        <div class="input-field col s6">
			        <input asp-for="LastEditAt" type="date" class="validate">
			        <label asp-for="LastEditAt">Password</label>
			        <span asp-validation-for="LastEditAt" data-error="" data-success=""></span>
		        </div>
	        </div>
			<div class="row">
				<input type="submit" value="Create" class="waves-effect btn-small  amber accent-2"/>
				<a asp-action="Index" class="btn-small blue darken-3">Cancel</a>
			</div>
        </form>
    </div>
</div>



@section Scripts {
	<script type="text/javascript">
		$(document).ready(function() {
			$('select').formSelect();
		});
	</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

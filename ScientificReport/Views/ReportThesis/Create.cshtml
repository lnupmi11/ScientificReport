@using Microsoft.AspNetCore.Mvc.Localization
@using ScientificReport.DTO.Models.Department
@model ScientificReport.DTO.Models.ReportThesis.ReportThesisModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Add report thesis"];
}

<style type="text/css">
	.selected-conference-id-label {
		/* margin-bottom: 10px; */
		position: relative !important;
		left: 0 !important;
		font-size: 12.5px !important;
	}
</style>
<h5>@ViewData["Title"]</h5>
<hr/>
<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
            <div class="row">
                <div class="input-field col s7">
                    <input asp-for="Thesis" type="text" class="validate">
                    <label asp-for="Thesis">@Localizer["Thesis"]</label>
                    <span class="helper-text" asp-validation-for="Thesis" data-error="" data-success=""></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s7">
                    <label asp-for="ConferenceId" class="selected-conference-id-label">@Localizer["Conference"]</label>
                    @{
                        var conferenceSelection = Model.Conferences.Select(d => new SelectItem(d.Topic, d.Id.ToString()));
                    }
                    @Html.DropDownListFor(x => Model.ConferenceId, new SelectList(conferenceSelection, "Value", "Text"))
                    @Html.ValidationMessageFor(x => x.ConferenceId, "", new {@class = "validate", @required = "required"})
                </div>
            </div>
            <div class="row myButtons">
                <button type="submit" class="waves-effect btn-small accent-2">@Localizer["Create"]</button>
                <a asp-action="Index" class="waves-effect btn-small blue darken-3">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $('select').formSelect();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

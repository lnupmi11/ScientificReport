@using Microsoft.AspNetCore.Mvc.Localization
@model ScientificReport.DAL.Entities.ReportThesis
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Create"];
}

<h3>@Localizer["Create"]</h3>

<h5>@Localizer["ReportThesis"]</h5>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
          
            <div class="row">
                <div class="input-field col s7">
                    <input asp-for="Thesis" type="text" class="validate">
                    <label asp-for="Thesis">@Localizer["Thesis"]</label>
                    <span class="helper-text" asp-validation-for="Thesis" data-error="" data-success=""></span>
                </div>
            </div>
         
            <div class="row myButtons">
                <input type="submit" value="Create" class="waves-effect btn-small  amber accent-2"/>
                <a asp-action="Index" class="btn-small blue darken-3">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

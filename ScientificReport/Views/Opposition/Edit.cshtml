@model ScientificReport.DAL.Entities.Opposition

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit</h3>

<h5>Opposition</h5>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="input-field col s6">
                    <textarea asp-for="About" class="materialize-textarea"></textarea>
                    <label asp-for="About"></label>
                    <span class="helper-text" asp-validation-for="About" 
                          data-length="400" data-error="" data-success=""></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="DateOfOpposition" type="date" class="validate"/>
                    <label asp-for="DateOfOpposition"></label>
                    <span class="helper-text" asp-validation-for="DateOfOpposition" 
                          data-length="400" data-error="" data-success=""></span>
                </div>
            </div>
	
            <div class="row myButtons">
                <input type="submit" value="Save" class="waves-effect btn-small  amber accent-2"/>
                <a asp-action="Index" class="btn-small blue darken-3">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<ScientificReport.DAL.Entities.Reports.TeacherReport>

@{
    ViewData["Title"] = "Index";
}

<h3>Teacher Report</h3>

<p>
    <button type="button" class="waves-effect btn-small green darken-3" 
            onclick="location.href = '@Url.Action("Create", "TeacherReport")'">Create</button>
</p>
<table class="responsive-table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        var teacherName = item.Teacher != null ?  $"{item.Teacher.FirstName} {item.Teacher.LastName}" : "Ghost";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => teacherName    )
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn-small blue darken-3">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="waves-effect btn-small waves-light">Edit</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline;">
                    <button type="submit" class="waves-effect btn-small deep-orange darken-3">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
@using ScientificReport.BLL.Interfaces
@model ScientificReport.Views.TeacherReport.PrintReportThesis
@inject IReportThesisService PublicationService
@{
    Layout = null;
}

@{
	var authors = PublicationService.GetAuthors(Model.ReportThesis.Id).ToList();
	var authorString = "";
	if(authors.Count>0){authorString = authors.Select(u => u.LastName +" " + u.FirstName.ToCharArray()[0] +". "+ u.MiddleName.ToCharArray()[0]+ ".").Aggregate((current, item) => current +", "+ item);}
}


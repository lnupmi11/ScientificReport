@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Edit"];
}

<style>
	.span-label {
		color: black;
	}
</style>
<!--suppress HtmlFormInputWithoutLabel -->
<h3>@Localizer["Edit"]</h3>

<h5>@Localizer["Report"]</h5>
<hr/>

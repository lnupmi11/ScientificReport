@model ScientificReport.DAL.Entities.Reports.TeacherReport
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
	ViewData["Title"] = Localizer["Delete"];
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
	<h4>@Localizer["Report"]</h4>
	<hr />
	<dl class="row">
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Created)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Created)
		</dd>
		<dt class = "col s2">
			@Localizer[Html.DisplayNameFor(model => model.Teacher)]
		</dt>
		<dd class = "col s10">
			@Html.DisplayFor(model => model.Teacher.FullName)
		</dd>
	</dl>
	
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
		<a asp-action="Index">@Localizer["Back to List"]</a>
	</form>
</div>

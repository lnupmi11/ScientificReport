@model ScientificReport.DTO.Models.TeacherReport.TeacherReportCreateViewModel;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Create"];
}


<h3>@Localizer["Create"]</h3>
<h5>@Localizer["Report"]</h5>
<hr/>
<div class="row">
    <div class="col s12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validate"></div>
            <div class="input-field col s6">
                @Html.DropDownListFor(
                    r => r.UserId,
                    new SelectList(Model.Users, "Id", "FullName", Model.UserId), new {@class = "col s6 push-s6"})
                @Html.ValidationMessageFor(x => x.UserId, "", new {@class = "validate"})
                <label asp-for="UserId" class="active">@Localizer["Teacher"]</label>
            </div>
            <div class="col s6">
            </div>
            <br/>
            <div class="row myButtons">
                <input type="submit" value="@Localizer["Create"]" class="waves-effect btn-small amber accent-2"/>
                <a asp-action="Index" class="btn-small blue darken-3">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
		$(document).ready(function() {
			$('select').formSelect();
		});
	</script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
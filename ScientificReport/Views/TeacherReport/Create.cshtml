@model ScientificReport.DTO.Models.TeacherReport.TeacherReportCreateViewModel;

@{
	ViewData["Title"] = "Create";
}

<h5>Create report</h5>
<hr/>
<div class="row">
	<div class="col s12">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="validate"></div>
			<div class="row">
				<div class="input-field col s7">
					@Html.DropDownListFor(
						x => x.UserId,
						new SelectList(Model.Users, "Id", "FirstName", Model.UserId), new {@class = "col s6 push-s6"})
					@Html.ValidationMessageFor(x => x.UserId, "", new {@class = "validate"})
				</div>
			</div>
			<br/>
			<div class="row myButtons">
				<button type="submit" class="waves-effect btn-small accent-2">Create</button>
				<a asp-action="Index" class="waves-effect btn-small blue darken-3">Cancel</a>
			</div>

		</form>
	</div>
</div>


@section Scripts {
	<script type="text/javascript">
		$(document).ready(function() {
			$('select').formSelect();
		});
	</script>
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}